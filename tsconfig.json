{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Node",
    "outDir": "./dist/cjs",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "removeComments": true,
    "strict": true,
    "paths": {
      "@common": [
        "src/common/index"
      ],
      "@crash": [
        "src/crash/index"
      ],
      "@crashes": [
        "src/crashes/index"
      ],
      "@events": [
        "src/events/index"
      ],
      "@post": [
        "src/post/index"
      ],
      "@versions": [
        "src/versions/index"
      ],
      "@spec/*": [
        "spec/*"
      ]
    }
  }
}